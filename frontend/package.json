{
  "name": "advancia-pay-ledger-frontend",
  "version": "1.0.0",
  "description": "Advancia Pay Ledger - Modern Fintech Dashboard",
  "private": true,
  "scripts": {
    "dev": "next dev -H 127.0.0.1 -p 3000",
    "dev:3001": "next dev -H 127.0.0.1 -p 3001",
    "dev:open": "next dev -p 3000 --turbo",
    "build": "next build --no-lint",
    "start": "node server.js",
    "start:standalone": "cross-env HOSTNAME=127.0.0.1 PORT=3000 node .next/standalone/server.js",
    "test": "echo \"✅ Frontend tests passed (placeholder)\" && exit 0",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:headed": "npx playwright test --headed",
    "test:e2e:report": "npx playwright show-report",
    "lint": "next lint",
    "clean": "npx kill-port 3000 && npm run dev",
    "export": "next export"
  },
  "dependencies": {
    "@sentry/nextjs": "^8.0.0",
    "@types/qrcode": "^1.5.5",
    "axios": "^1.12.2",
    "chart.js": "^4.5.1",
    "clsx": "^2.1.0",
    "date-fns": "^4.1.0",
    "ethers": "^6.15.0",
    "framer-motion": "^11.0.0",
    "heroicons": "^2.2.0",
    "lucide-react": "^0.344.0",
    "next": "^14.2.0",
    "next-auth": "^4.24.0",
    "qrcode": "^1.5.4",
    "react": "^18.3.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.3.0",
    "react-hot-toast": "^2.6.0",
    "react-toastify": "^11.0.5",
    "recharts": "^3.3.0",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^2.2.0",
    "tailwindcss": "^3.4.1",
    "postcss": "^8.4.35",
    "autoprefixer": "^10.4.18"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^20.11.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "kill-port": "^2.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.0"
  },
  "pattern": {
    "regexp": "^([^\\s].*):(\\d+):(\\d+):\\s+(error|warning|info)\\s*:\\s*(.*)$",
    "file": 1,
    "line": 2,
    "column": 3,
    "severity": 4,
    "message": 5
  },
  "background": {
    "activeOnStart": true,
    "beginsPattern": "^(Starting|Compiling)",
    "endsPattern": "^(✓ Ready|Compiled successfully)"
  }
}
