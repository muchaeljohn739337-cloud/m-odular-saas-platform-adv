    "@types/express": "^4.17.21",
    "@types/json2csv": "^5.0.7",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.9.2",
    "@types/nodemailer": "^7.0.2",
    "@types/validator": "^13.12.2",
    "@types/web-push": "^3.6.3",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "bitcoin-address-validation": "^3.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^5.7.2",
    "express": "^4.18.2",
