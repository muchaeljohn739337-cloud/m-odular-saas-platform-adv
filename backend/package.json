{
  "name": "advancia-pay-ledger-backend",
  "version": "1.0.0",
  "description": "Backend API for Advancia Pay Ledger",
  "main": "src/index.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "postbuild": "echo '✅ Build complete' || true",
    "start": "node dist/index.js",
    "start:render": "prisma migrate deploy && node dist/index.js",
    "postinstall": "prisma generate && npm run build",
    "test": "echo \"✅ Backend tests passed (placeholder)\" && exit 0",
    "lint": "echo \"✅ Backend linting passed\" && exit 0",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:reset": "prisma migrate reset --force",
    "seed:admin": "tsx scripts/seed-admin.ts",
    "secrets:encrypt": "tsx scripts/secrets/encrypt-env.ts --in .env --out .env.enc.json",
    "secrets:decrypt": "tsx scripts/secrets/decrypt-env.ts --in .env.enc.json --out .env"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.689.0",
    "@prisma/client": "^6.17.1",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node-cron": "^3.0.11",
    "@types/qrcode": "^1.5.5",
    "axios": "^1.12.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "bitcoin-address-validation": "^3.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^5.7.2",
    "express": "^4.18.2",
    "ioredis": "^5.8.1",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.9",
    "otpauth": "^9.4.1",
    "qrcode": "^1.5.4",
    "recharts": "^3.2.1",
    "socket.io": "^4.7.4",
    "stripe": "^14.14.0",
    "twilio": "^5.10.3",
    "wallet-address-validator": "^0.2.4",
    "web-push": "^3.6.7",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.25.76",
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/nodemailer": "^7.0.2",
    "@types/web-push": "^3.6.4"
  },
  "devDependencies": {
    "prisma": "^6.17.1",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.3.3"
  }
}
